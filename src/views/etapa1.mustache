<form action="/etapa1" method="POST">

            <h4>Dados Pessoais</h4>
            <div class="input-group">
  
                <div class="input-box">
                <label for="nome">Nome:</label>
                <input id="nome" type="text" name="nome" placeholder="Informe Seu nome" required>
                </div>

                <div class="input-box">
                <label for="endereco">Endereço:</label>
                <input id="endereco" type="text" name="endereco" placeholder="Endereço" required>
                </div>

                <div class="input-box">
                <label for="bairro">Bairro:</label>
                <input id="bairro" type="text" name="bairro" placeholder="Bairro" required>
                </div>

                <div class="input-box">
                <label for="cidade">Cidade:</label>
                <input id="cidade" type="text" name="cidade" placeholder="Cidade" required>
                </div>

                <div class="input-box">
                <label for="estado">Estado:</label>
                <input id="estado" type="text" name="estado" placeholder="Estado" required>
                </div>

                <div class="input-box">
                <label for="cep">CEP:</label>
                <input id="cep" type="text" name="cep" placeholder="xxxxx-xxx" required>
                </div>

                <div class="input-box">
                <label for="tel_res">Tel. Res:</label>
                <input id="tel_res" type="text" name="tel_res" placeholder="(xx)xxxx-xxxx" required>
                </div>

                <div class="input-box">
                <label for="telefone">Tel:</label>
                <input id="telefone" type="text" name="telefone" placeholder="(xx) xxxxx-xxxx" required>
                </div>

                <div class="input-box">
                <label for="tel_emergencia">Tel. Emergência:</label>
                <input id="tel_emergencia" type="text" name="tel_emergencia" placeholder="(xx) xxxxx-xxxx" required>
                </div>

                <div class="input-box">
                <label for="contato">Contato:</label>
                <input id="contato" type="text" name="contato" placeholder="Contato adicional" required>
                </div>

                <div class="input-box">
                <label for="data_nascimento">Data Nasc.</label>
                <input id="data_nascimento" type="date" name="data_nascimento" required>
                </div>

                <div class="input-box">
                <label for="profissao">Profissão:</label>
                <input id="profissao" type="text" name="profissao" placeholder="Sua profissão" required>
                </div>

                <div class="input-box">
                <label for="email">Email:</label>
                <input id="email" type="email" name="email" placeholder="seu@email.com" required>
                </div>
            </div>

        <div class="gender-input">
            <label>Sexo:</label>
            <input type="radio" name="sexo" id="feminino" value="Feminino" required>
            <label for="feminino">Feminino</label>
        
            <input type="radio" name="sexo" id="masculino" value="Masculino">
            <label for="masculino">Masculino</label>

            <input type="radio" name="sexo" id="outro" value="Outro">
            <label for="outro">Outro</label>
        </div>
        </div>

  <button onclick="nextStep()">Próximo</button>
